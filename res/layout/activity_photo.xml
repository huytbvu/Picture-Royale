<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/Black"   
    tools:context=".PhotoActivity" >
    
    <RelativeLayout 
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/sidebarLayout"
        >
        
         <ImageView
            android:id="@+id/mainphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"/>
        
           
        <LinearLayout
                android:id="@+id/partphotolayout" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">
                
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:id="@+id/part1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    
                    <ImageView
                        android:id="@+id/part2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    
                    <ImageView
                        android:id="@+id/part3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    
                </LinearLayout>
                
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:id="@+id/part4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    
                    <ImageView
                        android:id="@+id/part5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    
                    <ImageView
                        android:id="@+id/part6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    
                </LinearLayout>
                
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:id="@+id/part7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    
                    <ImageView
                        android:id="@+id/part8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    
                    <ImageView
                        android:id="@+id/part9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    
                </LinearLayout>
                
            </LinearLayout>
            
            <ImageView 
                android:id="@+id/currentPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/partphotolayout"
                android:layout_margin="20dp"/>
    </RelativeLayout>
    
    <RelativeLayout 
            android:id="@+id/infoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/topview"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@null">
            
                <TextView 
                    android:id="@+id/timeLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Ivory"
                    android:textSize="30sp"/>
                
                <TextView 
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/timeLeft"
                    android:textSize="30sp"
                    android:textColor="@color/Ivory"
                    android:text="SCORE: 0"/>
                
                <TextView 
                    android:id="@+id/stage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/score"
                    android:textSize="30sp"
                    android:textColor="@color/Ivory"
                    android:text="LEVEL: 1"/>
            
        </RelativeLayout>
        
    <LinearLayout 
        android:id="@+id/sidebarLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:background="@null">
        
        <LinearLayout
            android:id="@+id/heartLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:background="@null">
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/hintLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:background="@null">
        </LinearLayout>
            
    </LinearLayout>
    
    
</RelativeLayout>
